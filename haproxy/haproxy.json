template {
  source = "/tmp/haproxy.ctmpl"
  destination = "/usr/local/etc/haproxy/haproxy.cfg"
  command = "haproxy -f /usr/local/etc/haproxy/haproxy.cfg -D -sf $(pidof haproxy)"
}

